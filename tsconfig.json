{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": false,
    "esModuleInterop": true,
    "checkJs": false,
    "allowJs": false,
    "declaration": false,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": false
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}